{
  "compilerOptions": {
   "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Experimental Options */
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true
 },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
   ],
   "include": [
    "src/*.ts",
    "src/*.html"
   ]
 }